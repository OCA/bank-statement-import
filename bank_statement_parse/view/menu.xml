<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Create new submenu in finance/configuration -->
        <menuitem
            id="menu_finance_banking_settings"
            parent="account.menu_finance_configuration"
            name="Banking"
        />

        <!-- Add a shortcut menu for bank accounts -->
        <record
            model="ir.actions.act_window"
            id="action_res_partner_banks"
        >
            <field name="name">Bank Accounts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.bank</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_res_partner_banks"
            parent="menu_finance_banking_settings"
            action="action_res_partner_banks"
            name="Bank Accounts"
            sequence="10"
         />

        <!-- Menu item to show all import bank statement files -->
        <record
            model="ir.actions.act_window"
            id="action_account_bank_statement_import_tree"
        >
            <field name="name">Imported Bank Statements Files</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.bank.statement.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_account_bank_statement_import_tree"
            parent="account.menu_finance_bank_and_cash"
            action="action_account_bank_statement_import_tree"
            name="Imported Bank Statements Files"
            sequence="15"
         />

     </data>
</openerp>
