<odoo>

    <record model="ir.ui.view" id="online_bank_statement_provider_form">
        <field name="name">online.bank.statement.provider.form</field>
        <field name="model">online.bank.statement.provider</field>
        <field name="inherit_id" ref="account_bank_statement_import_online.online_bank_statement_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='configuration']" position="inside">
                <group attrs="{'invisible': [('service', '!=', 'braintree')]}">
                    <group>
                        <field
                            name="api_base"
                            string="API base"
                            groups="base.group_no_one"
                        />
                        <field
                            name="username"
                            string="Public Key"
                            attrs="{'required': [('service', '=', 'braintree')]}"
                        />
                        <field
                            name="password"
                            string="Private Key"
                            password="True"
                            attrs="{'required': [('service', '=', 'braintree')]}"
                        />
                    </group>
                    <group>
                        <field
                            name="braintree_merchant_account"
                            string="Profile"
                            attrs="{'required': [('service', '=', 'braintree')]}"
                            widget="dynamic_dropdown"
                            values="values_braintree_merchant_accounts"
                            context="{'username': username, 'password': password, 'api_base': api_base}"
                        />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
