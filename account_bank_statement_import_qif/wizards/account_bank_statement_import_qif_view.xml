<?xml version="1.0" ?>
<odoo>

    <record id="account_bank_statement_import_view" model="ir.ui.view">
        <field name="model">account.bank.statement.import</field>
        <field name="inherit_id" ref="account_bank_statement_import.account_bank_statement_import_view"/>
        <field name="arch" type="xml">
            <xpath expr="//ul[@id='statement_format']" position="inside">
                <li>Quicken Interchange Format (.qif)</li>
            </xpath>
            <xpath expr="//field[@name='filename']" position="after">
                <group>
                    <field name="is_qif_file" invisible="1"/>
                    <field name="qif_date_format" attrs="{'invisible': [('is_qif_file', '=', False)], 'required': [('is_qif_file', '=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
