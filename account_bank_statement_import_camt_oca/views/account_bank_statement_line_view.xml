<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="account_bank_statement_form_view_inherited" model="ir.ui.view">
           <field name="name">account.bank.statement.form.inherited</field>
           <field name="model">account.bank.statement</field>
           <field name="inherit_id" ref="account.view_bank_statement_form"/>
           <field name="arch" type="xml">
               <xpath expr="//field[@name='line_ids']//tree//field[@name='partner_id']" position="before">
                   <field name="info"/>
                   <field name="debitor"/>
                   <field name="creditor"/>
               </xpath>
           </field>
       </record>

    </data>
</odoo>
