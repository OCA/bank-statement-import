<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_statement_import_view" model="ir.ui.view">
        <field name="model">account.statement.import</field>
        <field
            name="inherit_id"
            ref="account_statement_import.account_statement_import_form"
        />
        <field name="arch" type="xml">
            <ul id="statement_format" position="inside">
                <li>CAMT</li>
                <li>zipped CAMT</li>
            </ul>
            <ul id="statement_format" position="after">
                <p
                    id="checking_name_unique"
                >Unique bank statement name checking (needed by CAMT importing) can be turned on at Settings > Invoicing > Bank Statement Import > Bank Statement Import.</p>
            </ul>
        </field>
    </record>
</odoo>
