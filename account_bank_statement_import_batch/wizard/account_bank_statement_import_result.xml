<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="account_bank_statement_import_result" model="ir.ui.view">
            <field name="name">Import Bank Statements Results</field>
            <field name="model">account.bank.statement.import.result</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Import Bank Statements Results">
                    <h2><label for="errors"/> </h2>
                    <field name="errors" readonly='1' col="4"/>
                    <h2><label for="warnings"/></h2>
                    <field name="warnings" readonly='1'/>
                </form>
                <footer>
                    <button icon="gtk-close" class='oe_highlight' special="cancel" string="_Close" colspan="4" />
                </footer>
            </field>
        </record>

        <record id="action_account_bank_statement_import_result" model="ir.actions.act_window">
            <field name="name">Show import results</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.bank.statement.import.result</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="account_bank_statement_import_result"/>
        </record>

    </data>
</openerp>
