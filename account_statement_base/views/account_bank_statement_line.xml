<odoo>
    <record id="account_bank_statement_line_form" model="ir.ui.view">
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <form>
                <group name="main">
                    <field invisible="1" name="company_id"/>
                    <field invisible="1" name="currency_id"/>
                    <field invisible="1" name="country_code"/>
                    <field invisible="1" name="state"/>
                    <field invisible="1" name="suitable_journal_ids"/>
                    <field name="date"/>
                    <field name="payment_ref" required="1"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field domain="[('id', '!=', currency_id)]" groups="base.group_multi_currency" name="foreign_currency_id"/>
                    <field groups="base.group_multi_currency" name="amount_currency"/>
                    <field name="partner_bank_id"/>
                    <field invisible="context.get('default_journal_id')" name="journal_id"/>
                    <field name="move_id"/>
                    <field domain="[('journal_id', '=', journal_id)]" invisible="not context.get('account_bank_statement_line_main_view')" name="statement_id"/>
                </group>
                <notebook>
                    <page name="narration" string="Notes">
                        <field colspan="2" name="narration" nolabel="1"/>
                    </page>
                    <page name="technical" string="Technical Information">
                        <group name="tech-fields">
                            <field name="transaction_type"/>
                            <field name="partner_name"/>
                            <field name="account_number"/>
                            <field name="is_reconciled"/>
                            <field name="payment_ids" widget="many2many_tags"/>
                        </group>
                    </page>
                </notebook>
            </form></field>
    </record>
    <record id="account_bank_statement_line_tree" model="ir.ui.view">
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <tree decoration-muted="is_reconciled">
                <field name="sequence" widget="handle"/>
                <field name="date"/>
                <field name="payment_ref"/>
                <field name="ref" optional="hide"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field groups="base.group_multi_currency" name="amount_currency" optional="hide"/>
                <field name="narration" optional="hide" string="Notes"/>
                <field name="journal_id" optional="hide"/>
                <field name="partner_bank_id" optional="hide"/>
                <button icon="fa-undo" invisible="is_reconciled == False" name="action_undo_reconciliation" string="Revert reconciliation" type="object"/>
                <field invisible="1" name="company_id"/>
                <field invisible="1" name="is_reconciled"/>
                <field invisible="1" name="currency_id"/>
                <field invisible="1" name="foreign_currency_id"/>
                <field invisible="1" name="country_code"/>
                <field invisible="1" name="state"/>
            </tree></field>
    </record>
    <record id="account_bank_statement_line_search" model="ir.ui.view">
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <search>
                <field filter_domain="['|', '|', ('payment_ref', 'ilike', self), ('ref', 'ilike', self), ('narration', 'ilike', self)]" name="payment_ref" string="Label, Ref or Notes"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field domain="[('type', 'in', ('bank', 'cash'))]" name="journal_id"/>
                <field name="amount"/>
                <separator/>
                <filter domain="[('is_reconciled', '=', True)]" name="reconciled" string="Reconciled"/>
                <filter domain="[('is_reconciled', '=', False)]" name="not_reconciled" string="Not Reconciled"/>
                <separator/>
                <filter domain="[('to_check', '=', True)]" name="to_check" string="To check"/>
                <separator/>
                <filter date="date" name="date" string="Date"/>
                <group name="groupby">
                    <filter context="{'group_by': 'partner_id'}" name="partner_groupby" string="Partner"/>
                    <filter context="{'group_by': 'journal_id'}" name="journal_groupby" string="Journal"/>
                    <filter context="{'group_by': 'transaction_type'}" name="transaction_type_groupby" string="Transaction Type"/>
                </group>
            </search></field>
    </record>
    <record id="account_bank_statement_line_action" model="ir.actions.act_window">
        <field name="name">Bank Statement Lines</field>
        <field name="res_model">account.bank.statement.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'account_bank_statement_line_main_view': True}</field>
    </record>
</odoo>
